<Window x:Class="CostAnalysis.UI.ABSUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ABS Wizz"
        Height="560" Width="980"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MinHeight="480" MinWidth="820"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFF7F7F9"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush"  Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="PrimaryBrush"          Color="#FF2563EB"/>
        <SolidColorBrush x:Key="PrimaryBrushMuted"     Color="#FFDBEAFE"/>
        <SolidColorBrush x:Key="TextBrush"             Color="#FF1F2937"/>
        <SolidColorBrush x:Key="SubtleTextBrush"       Color="#FF6B7280"/>
        <SolidColorBrush x:Key="BorderBrush"           Color="#FFE5E7EB"/>

        <!-- Spacing helpers -->
        <Thickness x:Key="OuterMargin">12</Thickness>
        <Thickness x:Key="InnerMargin">8</Thickness>
        <Thickness x:Key="CardPadding">10</Thickness>

        <!-- Typography -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="H1Label" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Card container style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Buttons -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinWidth" Value="110"/>
        </Style>

        <!-- List visuals -->
        <Style TargetType="ListBox">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TreeView">
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Icon font (Segoe MDL2 Assets) -->
        <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <!-- Top App Bar -->
        <Border Background="{StaticResource PrimaryBrush}"
                DockPanel.Dock="Top"
                Padding="14,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock FontFamily="{StaticResource IconFont}" FontSize="16" Foreground="White" VerticalAlignment="Center" Text="&#xE8D2;"/>
                    <TextBlock Text="ABS Wizz" Foreground="White" FontSize="18" FontWeight="SemiBold" />
                    <TextBlock Text="• Assign, review, and export ABS data" Foreground="#CCFFFFFF" Margin="8,0,0,0"/>
                </StackPanel>
                <TextBlock Grid.Column="1" Foreground="#CCFFFFFF" VerticalAlignment="Center"
                           Text="{Binding ProjectName, FallbackValue=Project}" />
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="{StaticResource PrimaryBrushMuted}" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Foreground="{StaticResource SubtleTextBrush}"
                           Text="{Binding StatusText, FallbackValue=Ready}" />
                <TextBlock Grid.Column="1" Foreground="{StaticResource SubtleTextBrush}"
                           Text="{Binding CurrentUser, FallbackValue=User}" />
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Margin="{StaticResource OuterMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <!-- splitter -->
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <!-- splitter -->
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Column headers -->
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Room Details" Style="{StaticResource H1Label}" />
            <TextBlock Grid.Column="2" Grid.Row="0" Text="Space Details" Style="{StaticResource H1Label}" />
            <TextBlock Grid.Column="4" Grid.Row="0" Text="Asset Code and Categories" Style="{StaticResource H1Label}" />

            <!-- Splitters -->
            <GridSplitter Grid.Column="1" Grid.RowSpan="3" Width="8" Background="Transparent" HorizontalAlignment="Center" ShowsPreview="True"/>
            <GridSplitter Grid.Column="3" Grid.RowSpan="3" Width="8" Background="Transparent" HorizontalAlignment="Center" ShowsPreview="True"/>

            <!-- Rooms (Left Card) -->
            <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource Card}">
                <DockPanel>
                    <!-- Optional search/filter (bind if available) -->
                    <TextBox DockPanel.Dock="Top" Margin="0,0,0,8"
                             x:Name="RoomsFilterText"
                             ToolTip="Type to filter rooms"/>
                    <ListBox x:Name="RoomsList"
                             DisplayMemberPath="Name"
                             SelectionChanged="RoomsList_SelectionChanged"/>
                </DockPanel>
            </Border>

            <!-- Elements in selected room (Middle Card) -->
            <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource Card}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Foreground="{StaticResource SubtleTextBrush}"
                               Text="Elements inside the selected room" Margin="0,0,0,8"/>
                    <ListBox x:Name="ElementsList"
                             DisplayMemberPath="Name"/>
                </DockPanel>
            </Border>

            <!-- Right column: Asset Code + Categories (Right Card) -->
            <Border Grid.Column="4" Grid.Row="1" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Asset Code row -->
                    <Grid Grid.Row="0" Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="_Asset Code:" Target="{Binding ElementName=AssetCodeText}"
                               Padding="0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="AssetCodeText" Grid.Column="1" MinWidth="120" VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center" FontStyle="Oblique" FontSize="14"
                                 ToolTip="Enter or scan the ABS asset code"/>
                        <Button Grid.Column="2" Click="Btn_ABS" ToolTip="Assign ABS to selected elements" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE73E;" Margin="0,0,6,0"/>
                                <TextBlock Text="Assign"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Categories tree -->
                    <TreeView x:Name="CategoriesTree"
                              Grid.Row="2"
                              ItemsSource="{Binding Categories}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding Name}"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Footer buttons -->
            <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
                <Button Click="Btn_ABS" ToolTip="Assign ABS to selected elements (_A)" >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE8D4;" Margin="0,0,6,0"/>
                        <AccessText Text="_Assign ABS"/>
                    </StackPanel>
                </Button>
                <Button Click="Btn_Highlight" ToolTip="Highlight selected items in model (_H)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE7F4;" Margin="0,0,6,0"/>
                        <AccessText Text="_Highlight in Model"/>
                    </StackPanel>
                </Button>
                <Button Click="Btn_Export" ToolTip="Export current ABS data to file (_E)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE74E;" Margin="0,0,6,0"/>
                        <AccessText Text="_Export Data"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Right-aligned footer space (kept for symmetry/expansion) -->
            <StackPanel Grid.Column="4" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0"/>
        </Grid>
    </DockPanel>
</Window>